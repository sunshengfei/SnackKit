<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/formMargin"
    android:paddingTop="@dimen/fieldSetMargin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tableCellSpacing"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.freddon.android.snackkit.extension.widget.ElipseImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/avatarNormal"
                android:layout_height="@dimen/avatarNormal"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/iconPadding"
                android:layout_marginRight="@dimen/iconPadding"
                app:oval="true"
                app:corner_radius="30dp"
                android:src="@color/colorPrimary"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_snack_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/defaultTextColor"
                        android:textSize="@dimen/H3"
                        tools:text="User" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fieldSetMargin"
                        android:layout_marginStart="@dimen/fieldSetMargin"
                        android:background="@color/colorPrimary"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/H5"
                        tools:text="Lv0" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/expand_snack_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/expand_operation"
                        android:paddingEnd="@dimen/letterGap"
                        android:paddingLeft="@dimen/letterGap"
                        android:paddingRight="@dimen/fieldSetMargin"
                        android:paddingStart="@dimen/letterGap"
                        android:src="@drawable/icon_cross" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/formMargin"
                    android:layout_marginRight="@dimen/formMargin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_snack_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/defaultHintTextColor"
                        android:textSize="@dimen/H6"
                        tools:text="2016-11-22" />

                    <TextView
                        android:id="@+id/model_snack_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/letterGap"
                        android:layout_marginStart="@dimen/letterGap"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/defaultHintTextColor"
                        android:textSize="@dimen/H6"
                        tools:text="Google Nexus 6" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/desc_snack_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/formMargin"
            android:layout_marginRight="@dimen/formMargin"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/defaultTextColor"
            android:textSize="@dimen/H5"
            tools:text="desc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end">

            <CheckBox
                android:id="@+id/comment_count_snack_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_chat_bubble_outline_red_500_18dp"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:maxEms="5"
                android:maxLines="1"
                android:minEms="5"
                android:minWidth="36sp"
                android:paddingBottom="@dimen/fieldSetMargin"
                android:paddingEnd="@dimen/tableCellSpacing"
                android:paddingLeft="@dimen/letterSpacing"
                android:paddingRight="@dimen/tableCellSpacing"
                android:paddingStart="@dimen/letterSpacing"
                android:paddingTop="@dimen/fieldSetMargin"
                android:textColor="@color/defaultHintTextColor"
                android:textSize="@dimen/H5"
                tools:text="1989" />

            <CheckBox
                android:id="@+id/praise_count_snack_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_icon_favorite_18"
                android:clickable="false"
                android:gravity="center_vertical"
                android:maxEms="5"
                android:maxLines="1"
                android:minEms="5"
                android:paddingBottom="@dimen/fieldSetMargin"
                android:paddingEnd="@dimen/letterSpacing"
                android:paddingLeft="@dimen/letterSpacing"
                android:paddingRight="@dimen/formMargin"
                android:paddingStart="@dimen/letterSpacing"
                android:paddingTop="@dimen/fieldSetMargin"
                android:textColor="@color/defaultHintTextColor"
                android:textSize="@dimen/H5"
                tools:text="1989" />

            <TextView
                android:id="@+id/tag_snack_item"
                android:layout_width="14sp"
                android:layout_height="14sp"
                android:layout_marginLeft="@dimen/iconPadding"
                android:layout_marginStart="@dimen/iconPadding"
                android:background="@color/colorPrimary"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/H6"
                android:visibility="gone"
                tools:text="å¿ƒ" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>